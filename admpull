#!/bin/bash
#Author: Alex Gabriel <alex.gabriel@microfocus.com>
#Created: 04-Feb-2020
#Modified: 17-Apr-2020
#Description: Short shell script that allows users to pull the most common ADM solutions when preparing for a demo.
#License: GPL 3.0

echo ""
echo "This is a short shell script that lets you pull the most common ADM containers from the admpresales Docker repository. If you have suggestions for improvement, please contact me by emailing alex.gabriel@microfocus.com"
echo ""
echo "A valid Docker login is required for this script to run properly."
echo ""
source functions
docker login
while :
do
    cat<<EOF

    Select the container(s) to pull:

    (1) Autopass
    (2) ALM
    (3) ALM Octane
    (4) AOS
    (5) AOS-QA
    (6) DA
    (7) DevOps
    (8) Fortify
    (9) IntelliJ
    (10) JIRA
    (11) LeanFT-Chrome
    (12) MF Connect
    (13) PPM
    (14) RPA
    (15) Sonarqube
    (16) SV
    (17) UFT Mobile
    (18) All
    (Q)uit
EOF
    read
    case "$REPLY" in
    "1")  pullAutopass ;;
    "2")  pullALM ;;
    "3")  pullALMOctane ;;
    "4")  pullAOS ;;
    "5")  pullAOSQA ;;
    "6")  pullDA ;;
    "7")  pullDevOps ;;
    "8")  pullFortify ;;
    "9")  pullIntelliJ ;;
    "10")  pullJIRA ;;
    "11")  pullLFTChrome ;;
    "12")  pullMFConnect ;;
    "13")  pullPPM ;;
    "14")  pullRPA ;;
    "15")  pullSonarqube ;;
    "16")  pullSV ;;
    "17")  pullUFTM ;;
    "18")  pullAutopass ; pullALM ; pullALMOctane ; pullAOS ; pullAOSQA ; pullDA ; pullDevOps ; pullFortify ; pullIntelliJ ; pullJIRA ; pullLFTChrome ; pullMFConnect ; pullPPM ; pullRPA ; pullSonarqube ; pullSV ; pullUFTM ;;
    "Q")  exit ;;
    "q")  exit ;;
     * )  echo "Invalid Option" ;;
    esac
    sleep 1
done