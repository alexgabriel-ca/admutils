#!/bin/bash
#Author: Alex Gabriel <alex.gabriel@microfocus.com>
#Created: 04/02/2020
#Modified: 28/02/2020
#Description: Short shell script that allows users to start the most common ADM solutions when preparing for a demo.
#License: GPL 3.0

echo ""
echo "This is a short shell script that lets you start the most common ADM containers from the admpresales Docker repository. If the containers do not exist, they will be pulled first, and then started.  If you have suggestions for improvement, please contact me by emailing alex.gabriel@microfocus.com"
echo ""
source functions
PS3='Select the container(s) to start, or 14 to quit. '
options=("Autopass" "ALM" "ALM Octane" "AOS" "DA" "DevOps" "Fortify" "IntelliJ" "JIRA" "MF Connect" "PPM" "RPA" "SV" "UFT Mobile" "All" "Quit")
select opt in "${options[@]}"; do
  case $opt in
  "Autopass")
    startAutopass
    ;;
  "ALM")
    startALM
    ;;
  "ALM Octane")
    startALMOctane
    ;;
  "AOS")
    startAOS
    ;;
  "DA")
    startDA
    ;;
  "DevOps")
    startDevOps
    ;;
  "Fortify")
    startFortify
    continue
    ;;
  "IntelliJ")
    startIntelliJ
    continue
    ;;
  "JIRA")
    startJIRA
    continue
    ;;
  "MF Connect")
    startMFConnect
    continue
    ;;
  "PPM")
    startPPM
    continue
    ;;
  "RPA")
    startRPA
    continue
    ;;
  "SV")
    startSV
    continue
    ;;
  "UFT Mobile")
    startUFTM
    continue
    ;;
"All")
    startAutopass
    startALM
    startALMOctane
    startAOS
    startDA
    startDevOps
    startFortify
    startIntelliJ
    startJIRA
    startMFConnect
    startSV
    startUFTM
    continue
    ;;
  "Quit")
    exit
    ;;
  *) echo "Invalid option $REPLY" ;;
  esac
done
